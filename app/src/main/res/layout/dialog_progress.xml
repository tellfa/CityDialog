<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dialog_progress_header"
            android:layout_alignRight="@+id/dialog_progress_header"
            android:layout_marginTop="148dp"
            android:background="@drawable/login_dialog_bg_dark">

            <ImageView
                android:id="@+id/dialog_progress_cancelButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:alpha="0.8"
                android:background="@drawable/text_background"
                android:padding="8dp"
                android:src="@drawable/ic_dialog_cancel"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_progress_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:layout_toLeftOf="@+id/dialog_progress_cancelButton"
                android:gravity="center"
                android:text="Dialog Title"
                android:textColor="@color/textPrimary"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/dialog_progress_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_progress_title"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="Description"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/textHintPrimary"
                android:textSize="17sp" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/dialog_progress_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_progress_description"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:alpha="0.8"
                android:padding="10dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/dialog_progress_header"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/login_dialog_logo_dark" />

    </RelativeLayout>

</RelativeLayout>